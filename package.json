    "scripts": {
        "start": "node ./srv/server.js",
        "dev": "nodemon",
        "build": "mbt build",
        "build:local": "npm-run-all build:cds build:ts",
        "build:cds": "node ./scripts/convert-entities-to-ts",
        "build:ts": "tsc",
        "eslint:ci": "eslint --fix srv",
        "test": "jest --passWithNoTests --silent --runInBand",
